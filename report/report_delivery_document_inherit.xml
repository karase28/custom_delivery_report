<odoo>
    <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">

        <!-- Numer projektu klienta obok Shipping Date -->
        <xpath expr="//div[@name='div_sched_date']" position="after">
            <div class="col col-3 mw-100 mb-2" name="div_client_project_number"
                 t-if="o.sale_id and o.sale_id.client_project_number">
                <strong>Nr projektu klienta</strong>
                <div class="m-0" t-field="o.sale_id.client_project_number"/>
            </div>
        </xpath>

        <!-- Dwa miejsca na podpisy na dole dokumentu -->
        <xpath expr="//div[@class='page']" position="inside">
            <div class="row mt64">
                <div class="col-6 text-center">
                    <strong>Podpis wystawiającego</strong>
                    <div style="border-top: 1px solid #000; margin-top: 60px;"/>
                </div>
                <div class="col-6 text-center">
                    <strong>Podpis odbierającego</strong>
                    <div style="border-top: 1px solid #000; margin-top: 60px;"/>
                </div>
            </div>
        </xpath>

    </template>
</odoo>