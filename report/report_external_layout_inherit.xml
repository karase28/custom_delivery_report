<odoo>
  <template id="report_external_layout_inherit" inherit_id="web.external_layout_folder">
      
      <!-- Dodajemy trzecią kolumnę obok adresu firmy -->
      <xpath expr="//div[@class='o_folder_company_info d-flex justify-content-between']" position="inside">
          <div name="production_address" class="w-50 text-end">
              <ul class="list-unstyled">
                  <li>
                      <strong>Production Address:</strong><br/>
                      <span>Twoja Firma Sp. z o.o.</span><br/>
                      <span>ul. Przemysłowa 12</span><br/>
                      <span>00-123 Warszawa</span><br/>
                      <span>Polska</span>
                  </li>
              </ul>
          </div>
      </xpath>

  </template>
</odoo>
